        "/users/{userId}/cart": {
            "get": {
                "tags": [
                    "Cart"
                ],
                "summary": "Récupérer le panier d'un utilisateur",
                "operationId": "a6820336eebb5fbff46549588f4fc3ea",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "ID de l'utilisateur",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Panier récupéré",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Utilisateur non trouvé"
                    }
                }
            },
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Ajouter un produit dans le panier",
                "operationId": "90e1dcdbfa4066cf165b1018721d6e95",
                "parameters": [
                    {
                        "name": "userId",
                        "in": "path",
                        "description": "ID de l'utilisateur",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "product_id",
                                    "quantity"
                                ],
                                "properties": {
                                    "product_id": {
                                        "type": "integer"
                                    },
                                    "quantity": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Produit ajouté au panier"
                    },
                    "400": {
                        "description": "Produit déjà dans le panier"
                    },
                    "404": {
                        "description": "Utilisateur non trouvé"
                    }
                }
            }
        },
        "/users/{userId}/cart/{productId}": {
            "put": {
                "tags": [
