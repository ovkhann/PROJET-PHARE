        "/api/users/address": {
            "put": {
                "tags": [
                    "Users"
                ],
                "summary": "Mettre à jour l'adresse de l'utilisateur authentifié",
                "operationId": "96ac917f586da04c030e3833579a85cf",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "street_name",
                                    "billing_address",
                                    "delivery_address"
                                ],
                                "properties": {
                                    "street_name": {
                                        "type": "string",
                                        "example": "123 rue Exemple"
                                    },
                                    "billing_address": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "delivery_address": {
                                        "type": "integer",
                                        "example": 2
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Adresse mise à jour"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Product": {
                "title": "Product",
                "required": [
                    "id",
                    "name",
                    "price",
                    "stock",
                    "description",
                    "category_id",
                    "option_id"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "T-shirt Streetwear"
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 29.99
                    },
                    "stock": {
                        "type": "integer",
                        "example": 100
                    },
                    "description": {
                        "type": "string",
                        "example": "Description du produit"
                    },
                    "archived": {
                        "type": "boolean",
                        "example": false
                    },
                    "picture": {
                        "type": "string",
                        "format": "url",
                        "example": "http://localhost/storage/products/image.jpg"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 1
                    },
                    "option_id": {
                        "type": "integer",
                        "example": 2
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "User",
                "required": [
                    "id",
                    "first_name",
                    "last_name",
                    "email",
                    "role"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "first_name": {
                        "type": "string",
                        "example": "John"
                    },
                    "last_name": {
                        "type": "string",
                        "example": "Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "john.doe@example.com"
                    },
                    "role": {
                        "type": "string",
                        "example": "ROLE_USER"
                    },
                    "street_name": {
                        "type": "string",
                        "example": "123 rue Exemple",
                        "nullable": true
                    },
                    "delivery_address": {
                        "type": "integer",
                        "example": 1,
                        "nullable": true
                    },
                    "billing_address": {
                        "type": "integer",
                        "example": 2,
                        "nullable": true
                    },
                    "token": {
                        "type": "string",
                        "example": "a1b2c3d4e5"
                    }
                },
                "type": "object"
            }
        }
    },
